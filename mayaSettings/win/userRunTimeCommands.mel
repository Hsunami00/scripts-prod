runTimeCommand
	-annotation ""
	-category "Custom Scripts"
	-hotkeyCtx ""
	-commandLanguage "python"
	-command ("pm.selectType( joint=0 ) if pm.selectType( q=1, joint=1 ) else pm.selectType( joint=1 )")
	JointSelectionMode;

runTimeCommand
	-annotation ""
	-category "Custom Scripts"
	-hotkeyCtx ""
	-commandLanguage "python"
	-command ("pm.selectType( nurbsSurface=0, polymesh=0, subdiv=0, plane=0 ) if ( pm.selectType(q=1, nurbsSurface=1) and pm.selectType(q=1, polymesh=1) and pm.selectType(q=1, subdiv=1) and pm.selectType(q=1, plane=1) )     else pm.selectType( nurbsSurface=1, polymesh=1, subdiv=1, plane=1 )\n")
	PolySelectionMode;

runTimeCommand
	-annotation ""
	-category "Custom Scripts"
	-hotkeyCtx ""
	-commandLanguage "python"
	-command ("if pm.getPanel( to=pm.getPanel(withFocus=1) ):\n    currentPanel = pm.getPanel(withFocus=1)\n    \nif pm.modelEditor(currentPanel, q=1, jx=1):\n    pm.modelEditor(currentPanel, edit=1, jx=0)\n    pm.modelEditor(currentPanel, edit=1, j=0)\nelse:\n    pm.modelEditor(currentPanel, edit=1, jx=1)\n    pm.modelEditor(currentPanel, edit=1, j=1)")
	ToggleJointXRayView;

runTimeCommand
	-annotation ""
	-category "Custom Scripts"
