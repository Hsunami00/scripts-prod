	-category "Custom Scripts"
	-hotkeyCtx ""
	-commandLanguage "python"
	-command ("cmds.currentUnit(l='cm', time='ntsc')\ncmds.grid(s=100, sp=100)\ncmds.setAttr(\"perspShape.nearClipPlane\", 0.5)\ncmds.setAttr(\"perspShape.farClipPlane\", 150000)\ncmds.setAttr(\"perspShape.focalLength\", 100)\npm.playbackOptions( min=1, ast=1, max=60, aet=60 )")
	resetUnits;

